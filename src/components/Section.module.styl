@require '../styles/global'
vars = json('../styles/vars.json', {hash:true})
@require '../styles/breakpoints'

.section
  z-index: 100

  &.flex
    display: flex

  &.wrap
    flex-flow: wrap

  &.chapter
    position: fixed
    width: 40%
    text-align: right
    padding: 3vh 3vw 
    height: 100vh

    display: flex
    flex-direction: column
    align-content: flex-end

    +below(vars.screens.mobile)
      width: auto
      position: relative
      text-align: left
      height: auto


  &.chapterContent
    position: relative
    width: 60%
    left: 40%

    +below(vars.screens.mobile)
      width: auto
      left: auto
