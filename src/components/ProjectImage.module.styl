@require '../styles/global.styl'


.imageWrapper
  overflow: hidden
  position: relative
  // height: 30vw
  flex: 100% 0 0

  .projectImage
    cursor: pointer
    height: 80vh
    width: 100%
    background-size: cover
    background-position: center
    position: relative

    +above(screens.big)
      flex: 33% 0 0

    +below(screens.mobile)
      flex: 100% 0 0
      height: 68vh
      margin-bottom: 1.4em
      box-shadow: 0 1px 10px rgba(0,0,0,0.3)
      border-radius: 5px

    &:before
      content: ''
      position: absolute
      top: 0
      left: 0
      background black
      display: block
      width: 100%
      height: 100%
      opacity: 0
      transition:opacity 1s

    &:hover:before
        opacity: 0.3

    transition: transform 1s linear

    &:hover
      transition: transform 10s linear
      transform: scale(1.2)


  .metaWrapper
    padding: 3vw
    align-self: center
    position: absolute
    top: 3vh
    left: 0
    z-index: 500
    pointer-events: none;

  .title, .description
    transition: opacity 1s
    display: block

  .title
    font-size: calc(0.75em + 2vw)
    letter-spacing: 3px
    font-weight: 800
    text-shadow: 0 2px 5px rgba(0,0,0,0.5)
    text-transform: uppercase;

  .description
    opacity: 0
    font-size: calc(0.75em + 0.75vw)

    +below(screens.mobile)
      opacity: 1

  &:hover
    .title, .description
      opacity: 1
