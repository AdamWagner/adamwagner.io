vars = json('../styles/vars.json', {hash:true})
mobile = vars.screens.mobile
@require '../styles/breakpoints'


size = 50px
thickness = 0.5vw

.backButton
  position: fixed
  z-index: 1000

  top: 2vw
  right: 4vw

  +below(mobile)
    top:1em
    right: 2em



  width: 2vw
  height: 2vw

  cursor: pointer
  height: size
  width: size
  line-height: size
  box-sizing: border-box
  display: inline-block

  &:before, &:after
      width = size
      height = thickness
      transform: rotate(-45deg)
      content: ''
      position: absolute
      top: 50%
      left: 50%
      margin-top: -height/2
      margin-left: -width/2
      display: block
      height: height
      width: width
      background-color: #fff
      transition: all 0.25s ease-out

  &:after
      transform: rotate(-135deg)
