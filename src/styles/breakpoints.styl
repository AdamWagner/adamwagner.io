vars = json('./vars.json', {hash:true})

/* --------------------------------------------------------------------------------------- *\
 Breakpoints
 Use like this:

 body
   background: red
   +above(1200px)
     background: blue

   +above(1920px)
     background: orange

/* --------------------------------------------------------------------------------------- */

below(num)
  condition = 'screen and (max-width: '+num+')'
  @media condition
    {block}

above(num)
  condition = 'screen and (min-width: '+num+')'
  @media condition
    {block}


.hide--mobile
  +below(vars.screens.mobile)
    display: none!important

.show--mobile
  display: block
  +above(vars.screens.mobile)
    display: none

.hide--tablet
  +below(vars.screens.tablet)
    display: none!important

.show--tablet
  display: block
  +above(vars.screens.tablet)
    display: none!important

.hide--desk
  +below(vars.screens.desk)
    display: none!important

.show--desk
  display: block
  +above(vars.screens.desk)
    display: none!important

.hide--huge
  +below(vars.screens.huge)
    display: none!important

.show--huge
  display: block
  +above(vars.screens.huge)
    display: none!important
