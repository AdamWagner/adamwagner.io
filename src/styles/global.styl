
body
  background-color: #96D2E0
  padding: 0
  margin: 0
  font-family: lato, sans-serif

*, *:before, *:after
  box-sizing: border-box

.flex
  display: flex

img
  width: 100%
  display: block

.white
  color:white

p
  font-size: 2vw
  line-height: 1.45
  opacity: 0.7

.soft
  padding: 1em

.softRight
  padding-right: 3em

.canvas
  position: fixed
  top: 0
  left: 0
  cursor: pointer
  z-index: 900
  visibility: hidden
