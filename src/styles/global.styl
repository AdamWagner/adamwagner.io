// @require('./reset')
vars = json('./vars.json', {hash:true})
@require './breakpoints'

grayText = lighten(vars.colors.asphalt, 15%)



html
  // -webkit-font-smoothing: antialiased;
  // -moz-osx-font-smoothing: grayscale;

body
  // background-color: vars.colors.asphalt

  // this is really unfortunate,
  // but it's due to a Chrome bug that renders innacurate colors
  // that appear as flickers during hardware accelerated transitions.
  background: url('../../static/images/bg-color.png')
  background-repeat: repeat

  color: darken(white, 4%)
  padding: 0
  margin: 0
  font-family: lato, sans-serif

*, *:before, *:after
  box-sizing: border-box

.flex
  display: flex

img
  width: 100%
  display: block

.white
  color:white


a
  color: inherit

h1, h2, h3, h4, h5, h6, p, span, li, dt, dd, blockquote
  margin-top: 0
  // font-family: 'PT Serif'
  // font-weight: 500


dt
  font-weight: bold

dd
  margin: 0
  margin-bottom: 1.4em
  font-size: calc(1em + 0.25vw)!important
  color: grayText

h1
  font-size: calc(1.1em + 1.4vw)
  line-height: 1.3

h2
  font-size: calc(1em + 1.2vw)

p, span, li, dt, dd, blockquote
  font-size: calc(1em + 0.5vw)
  min-font-size: 1em
  line-height: 1.45
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale;

  &.small
    font-size: 1em

blockquote
  font-size: calc(1em + 0.25vw)!important
  line-height: 1.6
  color: grayText
  font-style: italic




.soft
  padding: 1em

.softRight
  padding-right: 3em
