vars = json('../styles/vars.json', {hash:true})
@require '../styles/breakpoints'
mobile = vars.screens.mobile
tablet = vars.screens.tablet


.flexInherit
  display: inherit
  flex-flow: inherit
  align-content: inherit

  display: flex
  flex-flow: row wrap
  align-content: space-between

  height: 92vh // needed for mobile safari on iPad

  +below(mobile)
    height: auto

.headshotWrapper
  height: 100vh
  +below(mobile)
    height: 60vh

.headshot
  background-image: url('../../static/images/headshot-5.jpg')
  background-size: cover
  background-position: right
  height: 100vh

  +below(vars.screens.mobile)
    height: 60vh

.inverted
  position: absolute
  top: 0
  left: 0
  bottom: 0
  z-index: 999
  transform: scale(1.4) scaleX(-1)
  mix-blend-mode: multiply;
  object-fit: cover
  filter: invert();


.title, .about
  will-change: transform, opacity
  margin-top: -5vh

  +below(mobile)
    margin-top:0


.title // h1
  font-size: 6vw
  line-height: 1.1
  font-weight: 700
  text-align: right
  margin-bottom:8vh

  +below(mobile)
    text-align: left
    font-size: 3.157em
    line-height: 1.2

    margin-top: 0.75em
    margin-bottom: 0.75em


.contactCopy
  p
    color: white
  a
    color: white
