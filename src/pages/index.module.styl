  +below(vars.screens.mobile)
    height: 30vh


video
  position: absolute
  top: 0
  left: 0
  bottom: 0
  z-index: 999
  transform: scale(1.4)
  mix-blend-mode: screen
  object-fit: cover
  // filter: invert();
  opacity: 0.3


.inverted
  position: absolute
  top: 0
  left: 0
  bottom: 0
  z-index: 999
  transform: scale(1.4) scaleX(-1)
  mix-blend-mode: multiply;
  object-fit: cover
  filter: invert();


.title, .about
  will-change: transform, opacity


.title // h1
  font-size: 5vw
  line-height: 1.4
  font-weight: 700
  text-align: right
  margin-bottom:1em

  +below(vars.screens.mobile)
    text-align: left


.name
  position: fixed
  top: 2vw
  left: 2vw
  z-index: 900
  color: white
